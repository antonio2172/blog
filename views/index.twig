{% extends "layout.twig" %}

{% block content %}
	{% for blogPost in blogPosts %}
		<div class="blog-post">
			<h2>{{ blogPost.title }}</h2>
			<p>Jan 1, 2020 by <a href="">Alex</a></p>
			{% if blogPost.image %}
			<div class="blog-post-image">
				<img src="{{ blogPost.image }}" alt="imagen">
			</div>
			{% endif %}
			<div class="blog-post-content">
				{{ blogPost.content }}
			</div>
		</div>
	{% endfor %}
{% endblock %}